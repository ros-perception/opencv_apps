<launch>
  <arg name="gui" default="true" />
  <param name="use_sim_time" value="true" />
  <node name="play_face_bag" pkg="rosbag" type="play" args="-l $(find opencv_apps)/test/face_detector_withface_test_diamondback.bag --clock -r 0.3" />

  <group ns="wide_stereo/left" >
    <node name="image_proc" pkg="image_proc" type="image_proc" />
    <node name="image_view" pkg="image_view" type="image_view" args="image:=image_rect_color" if="$(arg gui)" />

    <!-- tracking.cpp -->
    <include file="$(find opencv_apps)/launch/tracking.launch" >
      <arg name="debug_view" value="$(arg gui)" />
      <arg name="image" value="image_rect_color" />
      <arg name="tracking_algorithm" value="4" />
      <arg name="node_name" default="tracking" />
    </include>
    <node pkg="opencv_apps" type="set_image.py" name="tracking_set_roi"
          args="550 270 130 300 $(find opencv_apps)/test/tracking_template.png" >
      <remap from="set_roi" to="tracking/set_roi" />
    </node>

    <!-- Test Codes -->
    <node name="tracking_saver_result" pkg="image_view" type="image_saver" >
      <param name="filename_format" value="$(find opencv_apps)/test/tracking_result.png"/>
      <param name="queue_size" value="5" />
      <remap from="image" to="tracking/image" />
      <remap from="tracking/camera_info" to="camera_info" />
    </node>
    <param name="tracking_image_test/topic" value="tracking/image" />
    <test test-name="tracking_image_test" pkg="rostest" type="hztest" name="tracking_image_test" >
      <param name="hz" value="20" />
      <param name="hzerror" value="15.0" />
      <param name="test_duration" value="1.0" />
    </test>
    <param name="tracking_output_test/topic" value="tracking/output" />
    <test test-name="tracking_output_test" pkg="rostest" type="hztest" name="tracking_output_test" >
      <param name="hz" value="20" />
      <param name="hzerror" value="15.0" />
      <param name="test_duration" value="1.0" />
    </test>
  </group>
</launch>

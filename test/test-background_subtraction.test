<launch>
  <arg name="gui" default="true" />
  <arg name="use_sim_time" default="true" />
  <node name="play_face_bag" pkg="rosbag" type="play" args="--clock -l $(find opencv_apps)/test/face_detector_withface_test_diamondback.bag" />

  <group ns="wide_stereo/left" >
    <node name="image_proc" pkg="image_proc" type="image_proc" />
    <node name="image_view" pkg="image_view" type="image_view" args="image:=image_rect_color" if="$(arg gui)" />

    <!-- background_subtraction.cpp  -->
    <!-- 0: Mixture-based Gaussian -->
    <include file="$(find opencv_apps)/launch/background_subtraction.launch" >
      <arg name="debug_view" value="$(arg gui)" />
      <arg name="image" value="image_rect_color" />
      <arg name="algorithm_type" value="0" />
      <arg name="node_name" value="background_subtraction_mog" />
    </include>

    <!-- Test Codes -->
    <node name="background_subtraction_mog_saver" pkg="image_view" type="image_saver" args="image:=background_subtraction_mog/image" >
      <param name="filename_format" value="$(find opencv_apps)/test/background_subtraction_mog.png"/>
    </node>
    <param name="background_subtraction_mog_test/topic" value="background_subtraction_mog/image" />
    <test test-name="background_subtraction_mog_test" pkg="rostest" type="hztest" name="background_subtraction_mog_test" >
      <param name="hz" value="20" />
      <param name="hzerror" value="15" />
      <param name="test_duration" value="5.0" /> 
    </test>

    <!-- 1: Mixture-based Gaussian 2 -->
    <include file="$(find opencv_apps)/launch/background_subtraction.launch" >
      <arg name="debug_view" value="$(arg gui)" />
      <arg name="image" value="image_rect_color" />
      <arg name="algorithm_type" value="1" />
      <arg name="node_name" value="background_subtraction_mog2" />
    </include>

    <!-- Test Codes -->
    <node name="background_subtraction_mog2_saver" pkg="image_view" type="image_saver" args="image:=background_subtraction_mog2/image" >
      <param name="filename_format" value="$(find opencv_apps)/test/background_subtraction_mog2.png"/>
    </node>
    <param name="background_subtraction_mog2_test/topic" value="background_subtraction_mog2/image" />
    <test test-name="background_subtraction_mog2_test" pkg="rostest" type="hztest" name="background_subtraction_mog2_test" >
      <param name="hz" value="20" />
      <param name="hzerror" value="15" />
      <param name="test_duration" value="5.0" /> 
    </test>

    <!-- 2: GMG(Godbehere - Matsukawa - Goldberg) -->
    <include file="$(find opencv_apps)/launch/background_subtraction.launch" >
      <arg name="debug_view" value="$(arg gui)" />
      <arg name="image" value="image_rect_color" />
      <arg name="algorithm_type" value="2" />
      <arg name="node_name" value="background_subtraction_gmg" />
    </include>

    <!-- Test Codes -->
    <node name="background_subtraction_gmg_saver" pkg="image_view" type="image_saver" args="image:=background_subtraction_gmg/image" >
      <param name="filename_format" value="$(find opencv_apps)/test/background_subtraction_gmg.png"/>
    </node>
    <param name="background_subtraction_gmg_test/topic" value="background_subtraction_gmg/image" />
    <test test-name="background_subtraction_gmg_test" pkg="rostest" type="hztest" name="background_subtraction_gmg_test" >
      <param name="hz" value="20" />
      <param name="hzerror" value="15" />
      <param name="test_duration" value="5.0" /> 
    </test>


  </group>
</launch>
